SMILE_EXTERNAL_FUNCTION(Plus)
{
	%RawType% x;
	Int i;

	switch (argc) {
		case 1:
			return argv[0];

		case 2:
			x = argv[0].unboxed.%unboxed%;
			x += argv[1].unboxed.%unboxed%;
			return SmileUnboxed%Type%_From(x);

		case 3:
			x = argv[0].unboxed.%unboxed%;
			x += argv[1].unboxed.%unboxed%;
			x += argv[2].unboxed.%unboxed%;
			return SmileUnboxed%Type%_From(x);

		case 4:
			x = argv[0].unboxed.%unboxed%;
			x += argv[1].unboxed.%unboxed%;
			x += argv[2].unboxed.%unboxed%;
			x += argv[3].unboxed.%unboxed%;
			return SmileUnboxed%Type%_From(x);

		default:
			x = argv[0].unboxed.%unboxed%;
			for (i = 1; i < argc; i++) {
				x += argv[i].unboxed.%unboxed%;
			}
			return SmileUnboxed%Type%_From(x);
	}
}

